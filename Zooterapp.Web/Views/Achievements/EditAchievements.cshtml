@model Zooterapp.Web.Models.AchievementViewModel
@{
    ViewData["Title"] = "Edit Achievements";
}

<h2>Edit Achievements</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPetAchievement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="AchievementId" class="control-label"></label>
                <select asp-for="AchievementId" asp-items="Model.Achievements" class="form-control"></select>
                <span asp-validation-for="AchievementId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pet" class="control-label"></label>
                <input asp-for="Pet" class="form-control" />
                <span asp-validation-for="Pet" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.PetId" class="btn btn-success">Back to Pet</a>
            </div>
        </form>
    </div>
</div>

