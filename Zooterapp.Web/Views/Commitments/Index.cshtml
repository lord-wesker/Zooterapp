@model IEnumerable<Zooterapp.Web.Data.Entities.Commitment>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Commitments</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                PetOwer
                            </th>
                            <th>
                                Customer
                            </th>
                            <th>
                                Pet Type
                            </th>
                            <th>
                                Age
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().Pet.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EndDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PetOwner.User.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer.User.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pet.PetType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pet.Race)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pet.Age)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    <a asp-action="Details" class="btn btn-default" asp-route-id="@item.Id"><i class="glyphicon glyphicon-list"> </i> </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
    	$(document).ready(function () {
        	$('#MyTable').DataTable();
    	});
    </script>
}

