@model Zooterapp.Web.Models.PetAchievementViewModel
@{
    ViewData["Title"] = "EditAchievements";
}

<h2>Edit Achievements</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPetAchievement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetOwnerId" />
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="PetAchievementID" class="control-label"></label>
                <select asp-for="PetAchievementID" asp-items="Model.PetAchievements" class="form-control"></select>
                <span asp-validation-for="PetAchievementID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pet" class="control-label"></label>
                <input asp-for="Pet" class="form-control" />
                <span asp-validation-for="Pet" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.PetOwnerId" class="btn btn-success">Back to Pet Achievements</a>
            </div>
        </form>
    </div>
</div>

